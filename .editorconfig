# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true

[*.{njk}]
indent_style = tab
indent_size = 4

[*.{md,toml,yaml,yml}]
indent_style = space
indent_size = 2
