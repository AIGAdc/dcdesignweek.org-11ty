<section class="[ mambo-hero mambo-section ][ {{ hero.heroColorCombo | safe }} ]" data-color="{{ heroColorCombo | safe }}" id="{{ hero.heroHeader | slug }}">
  <div class="[ container container-default ]">
    {% if hero.heroHeader %}
      <span id="skip-to-content">
        <h1>{{ title | safe }}</h1>
      </span>
    {% endif %}
    {% if hero.heroBody %}
      <div class="[ wysiwyg ]">{{ hero.heroBody | md | safe }}</div>
    {% endif %}
    {% if hero.showHeroButtonLeft == true %}
      <a class="[ mambo-anchor proposal ]" href="{{ hero.heroButtonLeftURL | safe }}">
        {{ hero.heroButtonLeftLabel | safe }}
        <span>
          {% include 'static/images/hero/button-container.njk' %}
        </span>
      </a>
    {% endif %}
    {% if hero.showHeroButtonRight == true %}
      <a href="{{ hero.heroButtonRightURL | safe }}">{{ hero.heroButtonRightLabel | safe  }}</a>
    {% endif %}
  </div>
</section>
