  <section class="[ mambo-section ][ flow ]" data-color="maroon-primary-on-cream-secondary" id="events">
    <div class="[ container container-default ][ flow ]">
      {# <!-- Skip to Content -->
      <div class="[ link-skip-to-content events ]" data-color="maroon-primary-on-white">
        <a href="#events-filter">Jump to filters</a>
        <a href="#events-list">Jump to events</a>
      </div> #}
      <h2 class="[ sr-hidden ]">Featured Events</h2>
      {% include "1-global-blocks/divider.njk" %}
      <div class="[ grid grid--align-start  ][ grid-flow grid-flow-start grid-four-columns ]">
        <div class="[ sticky faqs-sidebar ][ column-span-one ][ padding-all-16 ]" id="events-filter">
          {% include "2-layout-blocks/page/events/filter.njk" %}
        </div>
        <ul class="[ faqs-list ][ column-span-three ][ grid-flow grid-two-columns ][ mixitup-container ]" id="events-list">
          {% include "2-layout-blocks/page/events/list.njk" %}
        </ul>
      </div>
      {# <!-- Skip to Content -->
      <div class="[ link-skip-to-content events ]" data-color="maroon-primary-on-white">
        <a href="#events">Back to top of section</a>
      </div> #}
    </div>

    <!-- mixitup -->
    <script>
      var containerEl = document.querySelector(".mixitup-container");
      var mixer = mixitup(containerEl, {
        multifilter: {
          enable: true
        },
        animation: {
          enable: false
        }
      });
    </script>
    <!-- houdini -->
    <script>
      var showHideButton = new Houdini("[data-houdini]");
      var accordion = new Houdini('[data-houdini-group="additional-filters"]', {
        isAccordion: true,
        collapseOthers: true,
        icon: 1,
        /* If true, include an expand/collapse icon */
        iconClass: 'houdini-toggle-icon',
        /* The class to use for the expand/collapse icon */
        iconAttribute: 'data-houdini-icon',
        /* The data attribute to use for the expand/collapse icon */
        iconShow: '<i class="fas fa-chevron-right"></i>',
        /* The icon to expand an accordion */
        iconHide: '<i class="fas fa-chevron-down"></i>',
        /* The icon to collapse an accordion */
      });
      var datalist = new Houdini("[data-houdini-dl] dd", {isAccordion: true});
    </script>
    <script src="/static/scripts/mixitup.min.js"></script>

  </section>
{% endif %}
