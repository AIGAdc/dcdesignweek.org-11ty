{% if page.url == "/about/" %}
  <section class="[ mambo-section ][ flow ]" data-color="maroon-primary-on-white" id="{{ sectionOne.header | slug }}">
    <div class="[ container container-default ][ flow ]">
      <div class="[ grid-flow grid-four-columns ]">
        <div class="[ column-span-two ][ flow ]">
          {% for content in featured.committee %}
            <h2>{{ content.header }}</h2>
            <p>{{ content.body | safe }}</p>
            <a class="[ mambo-anchor action ]" data-color="cream-on-maroon-primary" href="{{ content.linkURL }}">
              {{ content.linkLabel | safe }}
            </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
{% endif %}

