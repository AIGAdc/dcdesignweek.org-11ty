<!-- Filter -->
<form class="[ mambo-accordion-group ]">

  <h2 class="[ sr-only ]">
    Events Filter
  </h2>

  <!-- Filter: Date -->
  <fieldset class="[ mambo-expander ]" data-filter-group>
    <!-- Trigger for hidden content -->
    <legend aria-label="Filter: Event Date" class="[ mambo-accordion__header ][ {% if faq.expanded == true %} is-expanded {% endif %} ]" data-color="cream-on-maroon-primary" data-houdini-toggle="eventDate">
      <h3>
        Date
      </h3>
    </legend>
    <!-- Hidden Content -->
    <div class="[ answer {% if question.expanded == true %} [ is-expanded ] {% endif %} ]" data-houdini-group="eventFilter" data-color="maroon-primary-on-cream" id="eventDate">
      {% for control in filters.filterEvents.day %}
        <div class="[ mambo-input-radio ]">
          <label for="{{ control.label | lower | slug }}">
            <input class="{% if control.occurred == true %} occurred {% endif %}" type="radio" id="{{ control.label | lower | slug }}" name="event-date" value="{{ control.label | lower | slug }}">
            {{ control.label }}
          </label>
        </div>
      {% endfor %}
    </div>
  </fieldset>

  <!-- Filter: Location -->
