<!-- Filter -->
<form class="[ mambo-accordion-group ]">
  <h2 class="[ sr-only ]">Events Filter</h2>
  <!-- Filter: Date -->
  <fieldset class="[ mambo-accordion ]" data-filter-group>
    <legend aria-label="Filter: Event Date" class="mambo-accordion__header" data-houdini-toggle="event-date">
      <h3>Date</h3>
    </legend>
    <div class="mambo-accordion__content {% if faq.expanded == true %} is-expanded {% endif %} checkbox-group" data-houdini-group="event-filter" id="event-location">
      {% for control in filters.filterEvents.day %}
        <div class="[ mambo-input-checkbox ]">
          <label for="{{ control.label | lower | slug }}">
            <input class="{% if control.occurred == true %} occurred {% endif %}" type="checkbox" id="{{ control.label | lower | slug }}" name="event-date" value="{{ control.label | lower | slug }}">
            {{ control.label }}
          </label>
        </div>
      {% endfor %}
    </div>
  </fieldset>
  <!-- Filter: Location -->
  <fieldset class="[ mambo-accordion ]" data-filter-group>
    <legend aria-label="Filter: Event Location" class="mambo-accordion__header" data-houdini-toggle="event-location">
      <h3>Location</h3>
    </legend>
    <div class="mambo-accordion__content {% if faq.expanded == true %} is-expanded {% endif %} checkbox-group" data-houdini-group="event-filter" id="event-location">
      {% for control in filters.filterEvents.location %}
        <div class="[ mambo-input-checkbox ]">
          <label for="{{ control.label | lower | slug }}">
            <input class="{% if control.occurred == true %} occurred {% endif %}" type="checkbox" id="{{ control.label | lower | slug }}" name="event-date" value="{{ control.label | lower | slug }}">
            {{ control.label }}
          </label>
        </div>
      {% endfor %}
    </div>
  </fieldset>
  <!-- Filter: Time -->
  <fieldset class="[ mambo-accordion ]" data-filter-group>
    <legend aria-label="Filter: Event Time" class="mambo-accordion__header" data-houdini-toggle="event-time">
      <h3>Time</h3>
    </legend>
    <div class="mambo-accordion__content {% if faq.expanded == true %} is-expanded {% endif %} checkbox-group" data-houdini-group="event-filter" id="event-time">
      {% for control in filters.filterEvents.time %}
        <div class="[ mambo-input-checkbox ]">
          <label for="{{ control.label | lower | slug }}">
            <input class="{% if control.occurred == true %} occurred {% endif %}" type="checkbox" id="{{ control.label | lower | slug }}" name="event-time" value="{{ control.label | lower | slug }}">
            {{ control.label }}
          </label>
        </div>
      {% endfor %}
    </div>
  </fieldset>
  <!-- Filter: Type -->
  <fieldset class="[ mambo-accordion ]" data-filter-group>
    <legend aria-label="Filter: Event Type" class="mambo-accordion__header" data-houdini-toggle="event-type">
      <h3>Type</h3>
    </legend>
    <div class="mambo-accordion__content {% if faq.expanded == true %} is-expanded {% endif %} checkbox-group" data-houdini-group="event-filter" id="event-type">
      {% for control in filters.filterEvents.type %}
        <div class="[ mambo-input-checkbox ]">
          <label for="{{ control.label | lower | slug }}">
            <input class="{% if control.occurred == true %} occurred {% endif %}" type="checkbox" id="{{ control.label | lower | slug }}" name="event-type" value="{{ control.label | lower | slug }}">
            {{ control.label }}
          </label>
        </div>
      {% endfor %}
    </div>
  </fieldset>
  <!-- Filter: Status -->
  <fieldset class="[ mambo-accordion ]" data-filter-group>
    <legend aria-label="Filter: Event Status" class="mambo-accordion__header" data-houdini-toggle="event-status">
      <h3>Status</h3>
    </legend>
    <div class="mambo-accordion__content {% if faq.expanded == true %} is-expanded {% endif %} checkbox-group" data-houdini-group="event-filter" id="event-status">
      <div class="[ mambo-input-checkbox ]">
        <label for="hide-past-events">
          <input type="checkbox" id="hide-past-events" name="event-status" value=".mix:not(.past-event)"> Hide Past Events
          </label>
      </div>
      <div class="[ mambo-input-checkbox ]">
        <label for="hide-sold-out">
          <input type="checkbox" id="hide-sold-out" name="event-status" value=".mix:not(.sold-out)"> Hide Sold Out
          </label>
      </div>
    </div>
  </fieldset>
  <!-- Button: Clear Filters -->
  <div class=" filterEvents__reset control-group">
    <button class="[ mambo-action ]" type="reset">Clear Filters</button>
  </div>
</form>
<script>
  var disclosure = new Houdini('[data-houdini-group="event-filter"]', {
    isAccordion: true,
    collapseOthers: true,
    icon: 1,
    /* If true, include an expand/collapse icon */
    iconClass: 'houdini-toggle-icon',
    /* The class to use for the expand/collapse icon */
    iconAttribute: 'data-houdini-icon',
    /* The data attribute to use for the expand/collapse icon */
    iconShow: '<i class="fas fa-chevron-right"></i>',
    /* The icon to expand an accordion */
    iconHide: '<i class="fas fa-chevron-down"></i>',
    /* The icon to collapse an accordion */
  });
</script>
