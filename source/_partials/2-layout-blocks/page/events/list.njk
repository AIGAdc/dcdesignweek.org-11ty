{% for event in collections.event | reverse %}
  <li class="[ mambo-card event ][ {{ event.data.type | safe }} ][ flow ]">
    <div class="[ media ]">
      <figure class="[ image ]">
        <img alt="{{ event.data.imageALT }}" loading=lazy src="{{ event.data.image }}">
      </figure>
      <div class="[ statuses ]">
        {% for status in event.data.status %}
          {% if status.statusType == "Featured on Home" %}
            <p class="[ status featured-on-home ]">{{status.statusLabel}}</p>
          {% elseif status.statusType == "Featured on Events" %}
            <p class="[ status featured-on-events ]">{{status.statusLabel}}</p>
          {% elseif status.statusType == "Sold Out" %}
            <p class="[ status sold-out ]">{{status.statusLabel}}</p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    <div class="[ details ]">
      <a href="{{ event.url }}">
        <h3 class="[ title ]">{{event.data.title}}</h3>
      </a>
    </div>
    <div class="[ meta ]">
      <div class="[ day-date ]">
        <p class="[ day ]">Day</p>
        <datetime class="[ date ]">Date</datetime>
        <span>{% include "static/images/blob-date.svg" %}</span>
      </div>
      <div class="[ time-location ]">
        <datetime class="[ time ]">Time</datetime>
        <p class="[ location ]">Location</p>
      </div>
      {# <datetime class="[ time ]">{{ event.date | readableEventDate }}</datetime> #}
    </div>
  </li>
{% endfor %}
<!-- mixitup -->
<script>
  var containerEl = document.querySelector(".mixitup-container");
  var mixer = mixitup(containerEl, {
    multifilter: {
      enable: true
    },
    pagination: {
      enable: true
    },
    animation: {
      enable: false
    }
  });
</script>
<!-- houdini -->
<script>
  var showHideButton = new Houdini("[data-houdini]");
  var accordion = new Houdini('[data-houdini-group="additional-filters"]', {
    isAccordion: true,
    collapseOthers: true,
    icon: 1,
    /* If true, include an expand/collapse icon */
    iconClass: 'houdini-toggle-icon',
    /* The class to use for the expand/collapse icon */
    iconAttribute: 'data-houdini-icon',
    /* The data attribute to use for the expand/collapse icon */
    iconShow: '<i class="fas fa-chevron-right"></i>',
    /* The icon to expand an accordion */
    iconHide: '<i class="fas fa-chevron-down"></i>',
    /* The icon to collapse an accordion */
  });
  var datalist = new Houdini("[data-houdini-dl] dd", {isAccordion: true});
</script>
<script src="/static/scripts/mixitup.min.js"></script>
