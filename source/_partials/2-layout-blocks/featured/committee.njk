{% for content in featured.committee %}
  <section class="[ mambo-section ][ flow ]" data-color="{{ content.colorCombo }}" id="{{ content.header | slug }}">
    <div class="[ container container-default ][ flow ][ grid-flow grid-flow-center grid-two-columns ]">
      <div class="[ flow ]">
        <h2>{{ content.header | md | safe }}</h2>
        <p>{{ content.body | md | safe }}</p>
        <a class="[ mambo-anchor action ]" data-color="cream-on-maroon-primary" href="{{ content.linkURL }}">
          {{ content.linkLabel | safe }}
        </a>
      </div>
      {% if content.image %}
        <figure>
          <img alt="{{ content.imageALT }}" src="{{ content.image }}">
        </figure>
      {% endif %}
    </div>
  </section>
{% endfor %}
