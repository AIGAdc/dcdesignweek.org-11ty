{% for content in featured.brand %}
  <!-- Wave -->
  <div class="[ wave wave-{{ content.header | slug }} ]" style="fill: var(--dcdw-2022-cream-secondary); background-color: var(--dcdw-2022-cream-primary); !important">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
      <path fill-opacity="1" d="M0,160L24,176C48,192,96,224,144,202.7C192,181,240,107,288,80C336,53,384,75,432,80C480,85,528,75,576,101.3C624,128,672,192,720,186.7C768,181,816,107,864,85.3C912,64,960,96,1008,106.7C1056,117,1104,107,1152,128C1200,149,1248,203,1296,240C1344,277,1392,299,1416,309.3L1440,320L1440,0L1416,0C1392,0,1344,0,1296,0C1248,0,1200,0,1152,0C1104,0,1056,0,1008,0C960,0,912,0,864,0C816,0,768,0,720,0C672,0,624,0,576,0C528,0,480,0,432,0C384,0,336,0,288,0C240,0,192,0,144,0C96,0,48,0,24,0L0,0Z"></path>
    </svg>
  </div>
  <section class="[ mambo-section ][ flow ]" data-color="{{ content.colorCombo }}" id="{{ content.header | slug }}">
    <div class="[ container container-default ][ flow ][ grid-flow grid-flow-center grid-two-columns ]">
      <div class="[ flow ]">
        <h2>{{ content.header | md | safe }}</h2>
        {% include "1-global-blocks/divider.njk" %}
        <p>{{ content.body | md | safe }}</p>
        <a class="[ mambo-button ]" href="{{ content.linkURL }}">
          {{ content.linkLabel | safe }}
          <span>
            <i class="fa-solid fa-arrow-right"></i>
          </span>
        </a>
      </div>
      {% if content.image %}
        <figure>
          <img alt="{{ content.imageALT }}" src="{{ content.image }}">
        </figure>
      {% endif %}
    </div>
  </section>
{% endfor %}
