<section
	class="[ small-faqs ] [ {% for content in faqs.global %} {{ content.sectionBGColor }} {{ content.sectionTextColor }} {% endfor %} ] [ flow ] [ padding-all-16 ]"
	id="small-faqs">
	{% for content in faqs.global %}
		<h2>
			{{ content.header }}
		</h2>
		<p>
			{{ content.body | safe }}
		</p>
		<a class="[ mambo-button ] [ border-bottom color-teal ]  [ {{ content.buttonTextColor }} ]"
		href="{{ content.buttonURL }}">
			{{ content.buttonLabel }}
			<span>
				<i class="fa-solid fa-arrow-right"></i>
			</span>
		</a>
	{% endfor %}
</section>
