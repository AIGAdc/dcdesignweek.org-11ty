<section class="[ mambo-hero mambo-section ][ flow ][ background-color-cream color-zodiac ][ padding-all-32 medium:padding-all-64 large:padding-all-120 ][ {{ heroColorCombo | safe }} ]" data-color="{{ heroColorCombo | safe }}"" id="{{ heroHeader | slug }}">
	<div class="[ container-content ][ flex-flow flex-flow-column ]">
		{% if heroHeader %}
			<span id="skip-to-content">
				<h1>{{ heroHeader | safe }}</h1>
			</span>
		{% endif  %}
		{% if heroBody %}
			<div class="wysiwyg flow-3">{{ heroBody | md | safe }}</div>
		{% endif %}
	</div>
</section>
