<!-- Skip to Content -->
<a class="[ link-skip-to-content ]" href="#content">
  Skip to Content
</a>
<!-- Component: Header -->
<header class="[ mambo-header ]" data-color="{{ pageSettings.defaultColorCombo }}">
  <div class="[ container container-default ]">
    <div>
      <a aria-label="DC Design Week Homepage" data-type="logo" href="/">
        {% if pageSettings.showFullLogo == true %}
          {% include 'static/images/logo-full.njk' %}
        {% endif %}
        {% if pageSettings.showSmallLogo == true %}
          {% include 'static/images/logo-small.njk' %}
        {% endif %}
        {% if pageSettings.showYearLogo == true %}
          {% include 'static/images/logo-year.njk' %}
        {% endif %}
      </a>
    </div>
    <ul class="[ list ]">
      <li>
        <a class="[ mambo-anchor ]{{ '[ active ]' if '/events/' in page.url }}" href="/events/">
          Events
        </a>
      </li>
      <li>
        <a class="[ mambo-anchor ]{{ '[ active ]' if '/about/' in page.url }}" href="/about/">
          About
        </a>
      </li>
      <li>
        <a class="[ mambo-anchor ]{{ '[ active ]' if '/committee/' in page.url }}" href="/committee/">
          Committee
        </a>
      </li>
      <li>
        <a class="[ mambo-anchor ]{{ '[ active ]' if '/faqs/' in page.url }}" href="/faqs/">
          FAQs
        </a>
      </li>
      <li>
        <button class="[ mambo-anchor action ]" data-color="{{ pageSettings.defaultMenuButtonColorCombo }}" data-houdini data-houdini-button="Menu" data-houdini-label id="show-me">
          <ul>
            <li>
              <a class="[ mambo-anchor ]" href="/faqs/">
                FAQs
              </a>
            </li>
          </ul>
        </button>
      </li>
    </ul>
  </div>
</header>
