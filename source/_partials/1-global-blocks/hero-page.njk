<section class="[ mambo-hero mambo-section ]" data-color="maroon-primary-on-yellow-primary" id="{{ hero.header | slug }}">
  <div class="[ container container-default ][ flow ][ grid-flow grid-flow-center grid-four-column ]">
    <div class="[ column-span-three ][ flow ]">
      {% if title %}
        <span id="skip-to-content">
          <h1>{{ title | md | safe }}</h1>
        </span>
      {% endif %}
      {% if hero.body %}
        <div class="[ wysiwyg ]">{{ hero.body | md | safe }}</div>
      {% endif %}
      <div class="[ buttons ]">
        {% if hero.showButtonLeft == true %}
          <a class="[ mambo-anchor ]" href="{{ hero.buttonLeftURL | md | safe }}">
            {{ hero.buttonLeftLabel | md | safe }}
          </a>
        {% endif %}
        {% if hero.showButtonRight == true %}
          <a class="[ mambo-anchor ]" href="{{ hero.buttonRightURL | md | safe }}">
            {{ hero.buttonRightLabel | md | safe  }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="home-page-blob">
    {% include 'static/images/hero/hero-page-blob.svg' %}
  </div>
</section>
