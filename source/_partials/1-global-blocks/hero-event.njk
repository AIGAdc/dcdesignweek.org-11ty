<section class="[ mambo-hero mambo-section ]" data-color="maroon-primary-on-yellow-primary" id="{{ title | slug }}">
  <div class="[ container container-default ][ flow ]">
    {% if title %}
      <span id="skip-to-content">
        <h1>{{ title | md | safe }}</h1>
      </span>
    {% endif %}
    <div class="[ buttons ]">
      <p> 
        Type / Weekday / Month / Time <datetime class="[ time ]">{{ startDate | readableEventDate }}</datetime>
      </p>
      {% if hero.showButtonLeft == true %}
        <a class="[ mambo-anchor action ]" data-color="{{ hero.buttonLeftColorCombo }}" href="{{ hero.buttonLeftURL | md | safe }}">
          {{ hero.buttonLeftLabel | md | safe }}
        </a>
      {% endif %}
      {% if hero.showButtonRight == true %}
        <a class="[ mambo-anchor action ]" data-color="{{ hero.buttonRightColorCombo }}" href="{{ hero.buttonRightURL | md | safe }}">
          {{ hero.buttonRightLabel | md | safe  }}
        </a>
      {% endif %}
    </div>
  </div>
</section>
<section class="[ statuses ]">
  {% for status in status %}
    {% if status.statusType == "Featured on Home" %}
      <p class="[ status featured-on-home ]">{{status.statusLabel}}</p>
    {% elseif status.statusType == "Featured on Events" %}
      <p class="[ status featured-on-events ]">{{status.statusLabel}}</p>
    {% elseif status.statusType == "Sold Out" %}
      <p class="[ status sold-out ]">{{status.statusLabel}}</p>
    {% endif %}
  {% endfor %}
</section>
