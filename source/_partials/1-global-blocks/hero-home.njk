<section class="[ mambo-hero mambo-section ]" data-color="{{ hero.colorCombo }}" id="{{ hero.header | slug }}">
  <div class="[ container container-default ][ flow ]">
    {% if hero.header %}
      <span id="skip-to-content">
        <h1>{{ hero.header | md | safe }}</h1>
      </span>
    {% endif %}
    {% if hero.body %}
      <div class="[ wysiwyg ]">{{ hero.body | md | safe }}</div>
    {% endif %}
    <div class="[ buttons ]">
      {% if hero.showButtonLeft == true %}
        <a class="[ mambo-anchor ]" href="{{ hero.buttonLeftURL | md | safe }}">
          {{ hero.buttonLeftLabel | md | safe }}
        </a>
      {% endif %}
      {% if hero.showButtonRight == true %}
        <a class="[ mambo-anchor ]" href="{{ hero.buttonRightURL | md | safe }}">
          {{ hero.buttonRightLabel | md | safe  }}
        </a>
      {% endif %}
    </div>
  </div>
  <div class="roots">
    {% include 'static/images/banner.svg' %}
  </div>
</section>
